@using QuanLyBanHangOnline.Models
@model List<ItemGioHang>
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/_ProductLayout.cshtml";
}

@if( Model.Count==0)
{
    <h1 style="font-size:50px; color:red;">Giỏ hàng rỗng</h1>
}
else
{
 <table class="c col-md-9">
     <tr style="border:1px solid red">
         <td>Mã SP</td>
         <td>Tên SP</td>
         <td>Hình ảnh</td>
         <td>Đơn giá</td>
         <td>Số lượng</td>
         <td>Thành tiền</td>
     </tr>
     
     @foreach (var item in Model)
{

    <tr style="border:1px solid red">

        <td style=" font-weight:bold; text-align:center">@item.MaSP</td>
        <td style="font-weight:bold; text-align:center">@item.TenSP</td>
        <td><img width="100" height="100" src="@Url.Content("~/Content/HinhAnh/"+item.HinhAnh)" /></td>
        <td style="font-weight:bold; text-align:center">@item.DonGia.ToString("#,##") VNĐ</td>
        <td style="font-weight:bold; text-align:center">@item.SoLuong</td>
        <td style="font-weight:bold; text-align:center">@item.ThanhTien.ToString("#,##") VNĐ</td>
        <td>@Html.ActionLink("Sửa", "SuaGioHang", new {@maSP=item.MaSP })</td>
    </tr>
}

 </table>   
}


